<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/m_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorAccent"
        app:theme="@style/ToolbarTheme">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_16sdp"
            android:fontFamily="@font/iran_sani"
            android:text="تنظیمات کاربری"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_10sdp" />

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:background="@color/colorWhite"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:fontFamily="@font/iran_sani"
                        android:gravity="right|center"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="در دسترس بودن "
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorText" />


                    <Switch
                        android:id="@+id/switchNotAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:fontFamily="@font/iran_sani"
                        android:textColor="@color/colorText" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:background="@color/colorWhite"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/iran_sani"
                        android:gravity="right|center"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="روش جستجو همراه با اعلان در مقصد"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorText" />

                    <ImageView
                        android:id="@+id/img_help"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_help" />


                    <Switch
                        android:id="@+id/SearchTypeMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:checked="true"
                        android:fontFamily="@font/iran_sani"
                        android:textColor="@color/colorText" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/UpgradeAccount"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorWhite"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/txt_BuyAccount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9.3"
                        android:fontFamily="@font/iran_sani"
                        android:gravity="right|center"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="حذف محدودیت ها و تبلیغات"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorText" />


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/iran_sani"
                        android:gravity="right|center"
                        android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ExitFromAccount"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorWhite"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/txt_ExitAccount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:fontFamily="@font/iran_sani"
                        android:gravity="right|center"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="خروج از حساب کاربری"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorText" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/SupportLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorWhite"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/txt_Support"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9.3"
                        android:fontFamily="@font/iran_sani"
                        android:gravity="right|center"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="پشتیبانی"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorText" />


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/iran_sani"
                        android:gravity="right|center"
                        android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/Rules"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorWhite"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/txt_Rules"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9.3"
                        android:fontFamily="@font/iran_sani"
                        android:gravity="right|center"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="قوانین و شرایط استفاده"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorText" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/iran_sani"
                        android:gravity="right|center"
                        android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/AboutUsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorWhite"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:padding="@dimen/_8sdp"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/txt_AboutUs"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9.3"
                        android:fontFamily="@font/iran_sani"
                        android:gravity="right|center"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="درباره ما"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorText" />


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/iran_sani"
                        android:gravity="right|center"
                        android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:indicatorColor="@color/colorText2"
        app:indicatorName="BallPulseIndicator" />


</FrameLayout>