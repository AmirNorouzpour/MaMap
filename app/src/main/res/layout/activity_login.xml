<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/backgroundLayout"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:id="@+id/titleTxt"
            android:paddingTop="20dp"
            android:text="احراز هویت" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/formHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_200sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


       <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@mipmap/" />-->

        <EditText
            android:id="@+id/MobileNumberTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:gravity="center"
            android:hint="شماره تلفن همراه"
            android:inputType="phone"
            android:paddingTop="@dimen/_16sdp"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorText2" />

        <EditText
            android:id="@+id/PasswordTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:gravity="center"
            android:hint="رمز عبور"
            android:inputType="textPassword"
            android:paddingTop="@dimen/_16sdp"
            android:textColorHint="@color/colorText2"
            android:textColor="@color/colorText"
            />


        <Button
            android:id="@+id/LoginCodeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_background"
            android:text="ورود"  />

        <TextView
            android:id="@+id/RememberMeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_16sdp"
            android:textColor="@color/colorAccent"
            android:text="رمز عبور خود را فراموش کرده اید؟"
            android:visibility="visible" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:indicatorColor="@color/colorText2"
            app:indicatorName="BallClipRotateMultipleIndicator"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">


            <TextView
                android:id="@+id/ruleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/iran_sani"
                android:text="با ورود به دوستان من با قوانین و شرایط استفاده سامانه موافقت کردید" />
        </LinearLayout>


    </LinearLayout>




</android.support.constraint.ConstraintLayout>